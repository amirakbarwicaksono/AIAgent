# Machine Learning: Prediksi kondisi motor listrik
import numpy as np
from sklearn.model_selection import train_test_split
from sklearn.svm import SVC
from sklearn.metrics import accuracy_score

# -----------------------------
# Data contoh (getaran, suhu, arus)
# Label: 0 = normal, 1 = rusak
# -----------------------------
X = np.array([
    [0.2, 35, 10],  # normal
    [0.3, 37, 12],  # normal
    [0.25, 36, 11], # normal
    [0.5, 60, 20],  # rusak
    [0.55, 62, 22], # rusak
    [0.6, 65, 25],  # rusak
])
y = np.array([0, 0, 0, 1, 1, 1])  

# Bagi data latih dan uji
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)

# Buat model SVM
model = SVC(kernel='linear')
model.fit(X_train, y_train)

# Evaluasi akurasi
y_pred = model.predict(X_test)
print("Akurasi:", accuracy_score(y_test, y_pred))

# Prediksi motor baru
data_baru = np.array([[0.4, 55, 18]])  # (getaran, suhu, arus)
hasil = model.predict(data_baru)

print("Data sensor baru:", data_baru)
print("Prediksi kondisi motor:", "Rusak" if hasil[0] == 1 else "Normal")
